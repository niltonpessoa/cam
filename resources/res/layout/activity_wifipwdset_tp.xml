            <TextView android:textSize="@dimen/setting_tips_textsize" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/setting_tips_marginleft" android:layout_marginTop="@dimen/setting_tips_margintop" android:layout_marginBottom="@dimen/setting_tips_marginbottom" android:text="@string/confirm_password"/>
