<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ptr="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/file_child_bg" android:background="@drawable/file_item_bg_selector" android:layout_width="match_parent" android:layout_height="@dimen/wifi_child_item_height">
        <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="20dp" android:layout_alignParentLeft="true">
            <TextView android:textSize="@dimen/wifi_child_top_textsize" android:textColor="@color/black" android:gravity="bottom" android:id="@+id/wifi_child_name" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="AWCDR_fa0a" android:lines="1" android:layout_weight="1"/>
            <TextView android:textSize="@dimen/wifi_child_bottom_textsize" android:textColor="@color/edittext_color" android:gravity="top" android:id="@+id/wifi_child_state" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="已进行保护" android:lines="1" android:layout_weight="1"/>
        </LinearLayout>
        <ImageView android:id="@+id/wifi_child_level" android:background="@drawable/wifi_lv_high" android:layout_width="@dimen/wifi_child_icon_height" android:layout_height="@dimen/wifi_child_icon_height" android:layout_marginRight="20dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/wifi_child_lock" android:background="@drawable/wifi_lock" android:layout_width="@dimen/wifi_child_icon_height" android:layout_height="@dimen/wifi_child_icon_height" android:layout_marginRight="@dimen/wifi_child_icon_margin" android:layout_toLeftOf="@+id/wifi_child_level" android:layout_centerVertical="true"/>
    </RelativeLayout>
</RelativeLayout>
