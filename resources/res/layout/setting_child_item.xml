<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ptr="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/setting_child_bg" android:background="@drawable/setting_item_bg_selector" android:layout_width="match_parent" android:layout_height="@dimen/setting_child_item_height">
        <TextView android:textSize="@dimen/setting_child_item_text_size" android:textColor="@color/item_text" android:id="@+id/setting_item_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/setting_child_item_leftpadding" android:text="WIFI密码" android:layout_toLeftOf="@+id/change" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        <LinearLayout android:gravity="right|center_vertical|center_horizontal|center" android:orientation="horizontal" android:id="@+id/change" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/setting_child_item_rightpadding" android:layout_alignParentRight="true" android:layout_centerVertical="true">
            <TextView android:textSize="@dimen/setting_child_item_tips_size" android:textColor="@color/setting_tips_txt_color" android:gravity="center_vertical" android:id="@+id/setting_item_tips" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/setting_child_item_rightpadding" android:text=""/>
            <ImageView android:gravity="center_vertical" android:id="@+id/setting_item_crow" android:background="@drawable/video_down_crow" android:layout_width="@dimen/setting_child_item_crow_width" android:layout_height="@dimen/setting_child_item_crow_width" android:layout_marginTop="1dp"/>
        </LinearLayout>
        <ToggleButton android:id="@+id/setting_item_toggle" android:background="@drawable/setting_toggle_selector" android:visibility="gone" android:layout_width="@dimen/setting_child_item_toggle_width" android:layout_height="@dimen/setting_child_item_toggle_height" android:layout_marginRight="@dimen/setting_child_item_rightpadding" android:textOn="" android:textOff="" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
</RelativeLayout>
