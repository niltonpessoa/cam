<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ptr="http://schemas.android.com/apk/res-auto" android:id="@+id/video_mainbg" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/video_titlebar" android:background="@drawable/title_bar" android:layout_width="match_parent" android:layout_height="@dimen/title_height" android:layout_alignParentTop="true">
        <ImageView android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="15dp" android:src="@drawable/video_title_logo" android:layout_alignParentLeft="true"/>
        <TextView android:textSize="@dimen/title_text" android:textColor="@color/black" android:id="@+id/video_top_tips" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="SDV" android:layout_centerInParent="true"/>
        <ImageButton android:id="@+id/video_top_infobtn" android:background="@drawable/video_infobtn_selector" android:layout_width="@dimen/video_infobtn_height" android:layout_height="@dimen/video_infobtn_height" android:layout_marginRight="@dimen/video_infobtn_padding" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout android:layout_gravity="center_horizontal" android:id="@+id/video_parentview" android:background="@color/black" android:layout_width="160dp" android:layout_height="90dp" android:layout_below="@+id/video_titlebar"/>
    <LinearLayout android:gravity="center" android:layout_gravity="center_horizontal" android:orientation="vertical" android:id="@+id/video_parentview_bg" android:background="@color/black" android:layout_width="match_parent" android:layout_height="90dp" android:layout_below="@+id/video_titlebar">
        <ImageView android:layout_gravity="center" android:background="@drawable/video_loading" android:layout_width="@dimen/video_load_icon_height" android:layout_height="@dimen/video_load_icon_height"/>
        <ImageView android:layout_gravity="center" android:id="@+id/video_parentview_loading_img" android:background="@drawable/begin_loading_icon" android:layout_width="@dimen/video_load_view_height" android:layout_height="@dimen/video_load_view_height" android:layout_marginTop="@dimen/video_load_margin"/>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/video_record_counter_tips_bg" android:background="@drawable/round_conner_4_bg_black" android:paddingLeft="@dimen/video_record_tips_pad_l_r" android:paddingTop="@dimen/video_record_tips_pad_t_b" android:paddingRight="@dimen/video_record_tips_pad_l_r" android:paddingBottom="@dimen/video_record_tips_pad_t_b" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/video_tips_margin_top" android:layout_marginRight="@dimen/video_tips_margin_right" android:layout_below="@+id/video_titlebar" android:layout_alignParentRight="true">
        <ImageView android:layout_gravity="center" android:background="@drawable/recording_icon" android:layout_width="@dimen/video_tips_icon_height" android:layout_height="@dimen/video_tips_icon_height" android:layout_marginRight="@dimen/video_tips_record_margin_right"/>
        <TextView android:textSize="@dimen/video_recording_txt_size" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center" android:id="@+id/video_video_counter_tips" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="00:00"/>
    </LinearLayout>
    <ImageView android:id="@+id/video_shotcut" android:visibility="gone" android:layout_width="@dimen/video_shotcut_por_width" android:layout_height="@dimen/video_shotcut_por_height" android:layout_alignBottom="@+id/video_parentview" android:layout_alignParentRight="true"/>
    <TextView android:textSize="@dimen/video_couter_text_size" android:textColor="@color/main_color" android:gravity="center" android:id="@+id/video_counter_tips" android:background="@drawable/capture_counter_bg" android:visibility="gone" android:layout_width="@dimen/video_couter_bg_height" android:layout_height="@dimen/video_couter_bg_height" android:layout_marginRight="@dimen/video_margin_left" android:layout_marginBottom="@dimen/video_margin_bottom" android:text="" android:layout_alignBottom="@+id/video_parentview" android:layout_alignParentLeft="true"/>
    <RelativeLayout android:id="@+id/video_por_opt_bg" android:background="@color/video_opt_bg_gray" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/video_parentview">
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/opt_top" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
            <ImageButton android:id="@+id/video_por_record" android:background="@drawable/normal_record_selector" android:layout_width="@dimen/video_por_opt_btn_height" android:layout_height="@dimen/video_por_opt_btn_height"/>
            <ImageButton android:id="@+id/video_por_capture" android:background="@drawable/normal_capture_selector" android:layout_width="@dimen/video_por_opt_btn_height" android:layout_height="@dimen/video_por_opt_btn_height" android:layout_marginLeft="@dimen/video_por_opt_btn_mar_l_r" android:layout_marginRight="@dimen/video_por_opt_btn_mar_l_r"/>
            <ImageButton android:id="@+id/video_por_slowgraphy" android:background="@drawable/slow_video_selector" android:layout_width="@dimen/video_por_opt_btn_height" android:layout_height="@dimen/video_por_opt_btn_height"/>
        </LinearLayout>
        <TextView android:textSize="@dimen/video_por_middle_txt_size" android:textColor="@color/black" android:gravity="center" android:id="@+id/video_por_middle_tips" android:background="@color/transparent" android:layout_width="match_parent" android:layout_height="@dimen/video_por_middle_txt_height" android:layout_marginBottom="20dp" android:text="1080p 60fps" android:layout_above="@+id/opt_top"/>
        <LinearLayout android:gravity="bottom|center_vertical|center_horizontal|center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/video_por_opt_view_mar_top" android:layout_below="@+id/opt_top">
            <RelativeLayout android:layout_width="0dp" android:layout_height="0dp">
                <ImageView android:id="@+id/video_por_opt_arrow_off" android:background="@drawable/video_por_opt_arror_off" android:visibility="gone" android:layout_width="@dimen/video_por_opt_v_arror_width" android:layout_height="@dimen/video_por_opt_v_arror_height" android:layout_marginTop="@dimen/video_por_opt_v_arror_mar_t_b" android:layout_marginBottom="@dimen/video_por_opt_v_arror_mar_t_b" android:layout_centerInParent="true"/>
                <LinearLayout android:gravity="bottom|center_vertical|center_horizontal|center" android:orientation="horizontal" android:id="@+id/video_por_opt_arrows" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <ImageView android:id="@+id/video_por_opt_arrow_1" android:background="@drawable/dot_selected" android:layout_width="@dimen/video_por_opt_v_dot_with" android:layout_height="@dimen/video_por_opt_v_dot_with" android:layout_marginTop="@dimen/video_por_opt_v_arror_mar_t_b" android:layout_marginBottom="@dimen/video_por_opt_v_arror_mar_t_b"/>
                    <ImageView android:id="@+id/video_por_opt_arrow_2" android:background="@drawable/dot_normal" android:layout_width="@dimen/video_por_opt_v_dot_with" android:layout_height="@dimen/video_por_opt_v_dot_with" android:layout_marginLeft="@dimen/video_por_opt_index_mar_l_r" android:layout_marginTop="@dimen/video_por_opt_v_arror_mar_t_b" android:layout_marginRight="@dimen/video_por_opt_index_mar_l_r" android:layout_marginBottom="@dimen/video_por_opt_v_arror_mar_t_b"/>
                    <ImageView android:id="@+id/video_por_opt_arrow_3" android:background="@drawable/dot_normal" android:layout_width="@dimen/video_por_opt_v_dot_with" android:layout_height="@dimen/video_por_opt_v_dot_with" android:layout_marginTop="@dimen/video_por_opt_v_arror_mar_t_b" android:layout_marginBottom="@dimen/video_por_opt_v_arror_mar_t_b"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/video_por_opt_views" android:layout_width="0dp" android:layout_height="0dp">
                <android.support.v4.view.ViewPager android:id="@+id/video_opt_viewpager" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_centerInParent="true" android:overScrollMode="never"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/video_lan_view" android:background="@drawable/video_lan_opt_set_bg" android:visibility="gone" android:layout_width="match_parent" android:layout_height="180dp" android:layout_alignParentBottom="true">
        <RelativeLayout android:id="@+id/lan_opt_top" android:background="@color/transparent" android:layout_width="match_parent" android:layout_height="@dimen/video_lan_top_v_height" android:layout_alignParentTop="true">
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="@dimen/video_lan_top_txt_mar_l" android:layout_alignParentLeft="true">
                <TextView android:textSize="@dimen/video_lan_top_txt_size" android:textColor="@color/main_color" android:id="@+id/video_lan_opt_tips_1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/video_record"/>
                <TextView android:textSize="@dimen/video_lan_top_txt_size" android:textColor="@color/white_half" android:id="@+id/video_lan_opt_tips_2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/video_lan_top_txt_mid_mar_l_r" android:layout_marginRight="@dimen/video_lan_top_txt_mid_mar_l_r" android:text="@string/video_capture"/>
                <TextView android:textSize="@dimen/video_lan_top_txt_size" android:textColor="@color/white_half" android:id="@+id/video_lan_opt_tips_3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/video_slow_photography"/>
            </LinearLayout>
            <ImageView android:id="@+id/video_lan_top_rl" android:background="@drawable/video_lan_opt_set_back_selector" android:duplicateParentState="true" android:layout_width="@dimen/video_lan_top_btn_width" android:layout_height="@dimen/video_lan_top_btn_height" android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout android:gravity="center_horizontal" android:background="@drawable/transparent_bg" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/lan_opt_top">
            <android.support.v4.view.ViewPager android:id="@+id/video_lan_bottom_viewpager" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_centerInParent="true" android:overScrollMode="never"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
