<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ptr="http://schemas.android.com/apk/res-auto" android:background="@color/black" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.xforce.v5.xdvpro.widget.viewpagerindicator.HackyViewPager android:id="@+id/pager" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <RelativeLayout android:id="@+id/photos_top_view" android:background="@color/lan_bottom_bg_color" android:layout_width="match_parent" android:layout_height="@dimen/title_height">
