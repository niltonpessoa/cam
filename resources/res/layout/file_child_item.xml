<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ptr="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/file_child_bg" android:background="@drawable/file_item_bg_selector" android:layout_width="match_parent" android:layout_height="@dimen/child_item_height">
        <RelativeLayout android:id="@+id/left_icon" android:background="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_alignParentLeft="true" android:layout_centerVertical="true">
            <ImageView android:id="@+id/file_child_icon" android:background="@drawable/default_icon" android:layout_width="@dimen/child_item_icon_height" android:layout_height="@dimen/child_item_icon_height" android:layout_centerInParent="true"/>
            <ImageView android:id="@+id/file_child_videotag" android:background="@drawable/video_tag" android:layout_width="@dimen/child_item_videotag_height" android:layout_height="@dimen/child_item_videotag_height" android:layout_centerInParent="true"/>
        </RelativeLayout>
        <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/child_item_midpadding" android:layout_toRightOf="@+id/left_icon" android:layout_centerVertical="true">
            <TextView android:textSize="@dimen/child_item_name_text" android:textColor="@color/item_text" android:id="@+id/file_child_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="SOS_20150210_113708A.MP4"/>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textSize="@dimen/child_item_size_text" android:textColor="@color/item_text" android:id="@+id/file_child_size" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="2015.8KB"/>
                <TextView android:textSize="@dimen/child_item_size_text" android:textColor="@color/item_text" android:id="@+id/file_child_progress" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="已下载"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView android:id="@+id/file_child_check" android:background="@drawable/item_checked" android:visibility="gone" android:layout_width="@dimen/child_item_check_height" android:layout_height="@dimen/child_item_check_height" android:layout_marginRight="10dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
</RelativeLayout>
