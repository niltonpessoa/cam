    <RelativeLayout android:id="@+id/top_title" android:background="@drawable/top_title_bar_bg" android:layout_width="match_parent" android:layout_height="@dimen/title_height" android:layout_alignParentTop="true">
        <Button android:textSize="@dimen/back_btn_textsize" android:textColor="@color/black_green_text_color" android:id="@+id/back_btn" android:background="@color/transparent" android:layout_width="wrap_content" android:layout_height="@dimen/back_btn_height" android:layout_marginLeft="@dimen/back_btn_marginleft" android:text="SOS_20150227_165311A.MP4" android:drawableLeft="@drawable/back_green_crow" android:drawablePadding="@dimen/playmp4_top_btn_text_pad" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
