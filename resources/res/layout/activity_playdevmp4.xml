<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ptr="http://schemas.android.com/apk/res-auto" android:id="@+id/main_bg" android:background="@color/groupitem_bg" android:layout_width="match_parent" android:layout_height="match_parent">
