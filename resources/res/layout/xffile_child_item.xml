<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/file_child_bg" android:background="@drawable/file_item_bg_selector" android:layout_width="100dp" android:layout_height="100dp">
        <ImageView android:id="@+id/file_child_icon" android:background="@drawable/default_icon" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_centerInParent="true"/>
        <ImageView android:id="@+id/file_child_videotag" android:background="@drawable/video_tag" android:layout_width="@dimen/child_item_videotag_height" android:layout_height="@dimen/child_item_videotag_height" android:layout_centerInParent="true"/>
        <ImageView android:id="@+id/file_child_check" android:background="@drawable/item_checked" android:visibility="gone" android:layout_width="@dimen/child_item_check_height" android:layout_height="@dimen/child_item_check_height" android:layout_marginRight="5dp" android:layout_marginBottom="5dp" android:layout_alignParentRight="true" android:layout_alignParentBottom="true" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/file_child_downloaded" android:background="@drawable/file_downloaded" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginBottom="5dp" android:layout_alignParentLeft="true" android:layout_alignParentBottom="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
</RelativeLayout>
